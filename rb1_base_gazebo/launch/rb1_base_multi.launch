<?xml version="1.0"?>
<launch>

	<!-- roslaunch arguments --> 
	<arg name="debug" default="false"/>
	<arg name="launch_rviz" default="true"/>
	<arg name="launch_robot_a" default="true"/>
	<arg name="launch_robot_b" default="true"/>
	<arg name="launch_robot_c" default="true"/>
	<arg name="launch_navigation" default="true"/>
	<arg name="load_map" default="empty/map_empty.yaml"/>

	<!--enumerate here the different robots-->
	<!-- robot a -->
	<arg name="id_robot_a" value="rb1_base_a"/>
	<arg name="x_init_pose_robot_a" value="0" />
	<arg name="y_init_pose_robot_a" value="0" />
	<arg name="z_init_pose_robot_a" value="0" />
	<arg name="xacro_robot_a" value="rb1_base_v3_multi.urdf.xacro"/>
	
	<!-- robot b -->
	<arg name="id_robot_b" value="rb1_base_b"/>
	<arg name="x_init_pose_robot_b" value="0" />
	<arg name="y_init_pose_robot_b" value="1" />
	<arg name="z_init_pose_robot_b" value="0" />
	<arg name="xacro_robot_b" value="rb1_base_v2_multi.urdf.xacro"/>
	
	<!-- robot c -->
	<arg name="id_robot_c" value="rb1_base_c"/>
	<arg name="x_init_pose_robot_c" value="0" />
	<arg name="y_init_pose_robot_c" value="2" />
	<arg name="z_init_pose_robot_c" value="0" />
	<arg name="xacro_robot_c" value="rb1_base_v2_elevator_multi.urdf.xacro"/>

	<!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
	<arg name="world_name" value="$(find rb1_base_gazebo)/worlds/rb1_base.world"/>
	<arg name="debug" value="$(arg debug)" />
	<arg name="paused" value="false"/>
	<arg name="use_sim_time" value="true"/>
	<arg name="headless" value="false"/>
	</include>

	<!-- launch rviz -->
	<node if="$(arg launch_rviz)" name="rviz" pkg="rviz" type="rviz" required="true" />
	
	<!-- Run the map server -->
	<node if="$(arg launch_navigation)" name="map_server" pkg="map_server" type="map_server" args="$(find rb1_base_navigation)/maps/$(arg load_map)"/>
  
	<!--BEGIN ROBOT 1-->
	<include if="$(arg launch_robot_a)" file="$(find rb1_base_gazebo)/launch/rb1_base_one_robot.launch">
		<arg name="id_robot" value="$(arg id_robot_a)"/>
		<arg name="x_init_pose" value="$(arg x_init_pose_robot_a)"/>
		<arg name="y_init_pose" value="$(arg y_init_pose_robot_a)"/>
		<arg name="z_init_pose" value="$(arg z_init_pose_robot_a)"/>
		<arg name="xacro_robot" value="$(arg xacro_robot_a)"/>
		<arg name="launch_navigation" value="$(arg launch_navigation)"/>
	</include>
	
	<!--BEGIN ROBOT 2-->
	<include if="$(arg launch_robot_b)" file="$(find rb1_base_gazebo)/launch/rb1_base_one_robot.launch">
		<arg name="id_robot" value="$(arg id_robot_b)"/>
		<arg name="x_init_pose" value="$(arg x_init_pose_robot_b)"/>
		<arg name="y_init_pose" value="$(arg y_init_pose_robot_b)"/>
		<arg name="z_init_pose" value="$(arg z_init_pose_robot_b)"/>
		<arg name="xacro_robot" value="$(arg xacro_robot_b)"/>
		<arg name="launch_navigation" value="$(arg launch_navigation)"/>
	</include>

	<!--BEGIN ROBOT 3-->
	<include if="$(arg launch_robot_c)" file="$(find rb1_base_gazebo)/launch/rb1_base_one_robot.launch">
		<arg name="id_robot" value="$(arg id_robot_c)"/>
		<arg name="x_init_pose" value="$(arg x_init_pose_robot_c)"/>
		<arg name="y_init_pose" value="$(arg y_init_pose_robot_c)"/>
		<arg name="z_init_pose" value="$(arg z_init_pose_robot_c)"/>
		<arg name="xacro_robot" value="$(arg xacro_robot_c)"/>
		<arg name="launch_navigation" value="$(arg launch_navigation)"/>
	</include>

</launch>
